@using SchoolCare.Models
@model signup
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script src="https://kit.fontawesome.com/c4254e24a8.js" crossorigin="anonymous"></script>
    <link rel="shortcut icon" href="~/Content/assets/C_Image/sc-favicon.png" type="image/x-icon">

    <style>
        * {
            margin: 0;
            padding: 0;
            font-family: 'Poppins',sans-serif;
            box-sizing: border-box;
        }

        .container {
            width: 100%;
            height: 100vh;
            background-image: linear-gradient(rgba(0,0,50,0.8),rgba(0,0,50,0.8)),url('/Content/gallaryImage/background.png');
            background-position: center;
            background-size: cover;
            position: relative;
        }

        .form-box {
            width: 90%;
            max-width: 1000px;
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%,-50%);
            background: #fff;
            padding: 50px 60px 70px;
            text-align: center;
            height: 36rem;
            margin-top: 2rem;
            border-radius: 5px;
        }

            .form-box h1 {
                font-size: 30px;
                margin-bottom: 60px;
                color: #3c00a0;
                position: relative;
                margin-top: -2rem;
            }

                .form-box h1::after {
                    content: "";
                    width: 30px;
                    height: 4px;
                    border-radius: 3px;
                    background: #3c00a0;
                    position: absolute;
                    bottom: -12px;
                    left: 50%;
                    transform: translateX(-50%);
                }

        .input-field {
            background: #eaeaea;
            margin: 15px 0;
            border-radius: 3px;
            display: flex;
            align-items: center;
            max-height: 55px;
            transition: max-height 0.5s;
            overflow: hidden;
            max-width: 400px;
        }

        .input-group {
            margin-top: -2rem;
            display: flex;
            justify-content: space-between;
            align-items: center;
            flex-wrap: wrap;
        }

        input {
            width: 100%;
            background: transparent;
            border: 0;
            outline: 0;
            padding: 18px 15px;
        }

        .input-field i {
            margin-left: 15px;
            color: #9999;
        }

        form p {
            text-align: center;
            font-size: 13px;
            margin-top: 3rem;
        }

            form p a {
                text-decoration: none;
                color: #3c00a0;
            }

        .btn-field {
            width: 100%;
            display: flex;
            justify-content: space-evenly;
            align-items: center;
            /*margin-top: 1.5rem;*/
        }

            .btn-field button {
                flex-basis: 48%;
                background: #3c00a0;
                color: #fff;
                height: 40px;
                border-radius: 20px;
                border: 0;
                outline: 0;
                cursor: pointer;
                transition: background 1s;
            }

        .heading {
            display: flex;
            justify-content: center;
            align-items: center;
        }

            .heading img {
                margin-top: 1rem;
            }

        .input-group {
            height: 280px;
        }



        .home {
            height: 3rem;
            width: 6rem;
            background-color: transparent;
            color: white;
            border: 2px solid white;
            position: fixed;
            left: 0;
            cursor: pointer;
            border-radius: 5px;
            top: 0;
        }

        #one {
            width: 400px;
        }

        #two {
            width: 400px;
            margin-top: -3.5rem;
        }

        #photo {
            background-color: transparent;
        }

        #gender {
            background-color: transparent;
        }

        .showpassword {
            margin-right: 1rem;
            cursor: pointer;
        }
    </style>
</head>
<body>


    <div class="container">
        <h3 class="heading">
            <button class="home" onclick="window.open('/Login','_self')"><i class="fa-solid fa-backward">&nbsp;Back</i></button>
            <img src="~/Content/assets/C_Image/school-care-p.png?width=120" alt="SchoolCare" />
        </h3>
        <div class="form-box">
            <h1 id="titl">Sign up</h1>
            @using (Html.BeginForm("Signup", "Home", FormMethod.Post, new {@enctype="multipart/form-data" }))
            {
                <form>
                    <div class="input-group">

                        <div id="one">
                            <div class="input-field">
                                <i class="fa-solid fa-user"></i>

                                @Html.TextBoxFor(n => n.Name, new { type = "text", placeholder = "Enter your full name", required = "required" })

                            </div>
                            <div class="input-field">
                                <i class="fa-solid fa-user"></i>

                                @Html.TextBoxFor(n => n.Class, new { type = "text", placeholder = "Enter your class", required = "required" })

                            </div>
                            <div class="input-field">
                                <i class="fa-solid fa-user"></i>

                                @Html.TextBoxFor(n => n.Session, new { type = "text", placeholder = "Enter your session", required = "required" })

                            </div>
                            <div class="input-field">
                                <i class="fa-solid fa-user"></i>

                                @Html.TextBoxFor(n => n.Roll, new { type = "text", placeholder = "Enter your roll no", required = "required" })

                            </div>
                            <div class="input-field">
                                <i class="fa-solid fa-phone"></i>

                                @Html.TextBoxFor(n => n.Phone, new { type = "text", placeholder = "Enter your phone", required = "required" })

                            </div>
                            <div class="input-field">
                                <i class="fa-solid fa-envelope"></i>

                                @Html.TextBoxFor(n => n.Email, new { type = "email", placeholder = "Enter your email", required = "required" })

                            </div>
                            <div class="input-field">
                                <i class="fa-solid fa-address-book"></i>

                                @Html.TextBoxFor(n => n.Address, new { type = "text", placeholder = "Enter your address", required = "required" })
                            </div>
                        </div>
                        <div id="two">
                            <div class="input-field">
                                <i class="fa-solid fa-droplet"></i>

                                @Html.TextBoxFor(n => n.Bloodgroup, new { type = "text", placeholder = "Enter your bloodgroup", required = "required" })
                            </div>
                            <div class="input-field">
                                <i class="fa-solid fa-lock"></i>

                                @Html.TextBoxFor(n => n.Password, new { type = "password",id="pass", placeholder = "Enter your password", required = "required" })
                                <i class="fa-solid fa-eye showpassword" onclick="showpassword()"></i>
                            </div>
                            <div class="input-field" id="gender">

                                <label>Gender</label>
                                @Html.RadioButtonFor(n => n.Gender, "Male", "checked")
                                <label>Male</label>
                                @Html.RadioButtonFor(n => n.Gender, "Female")
                                <label>Female</label>
                            </div>
                            <div class="input-field">
                                <i class="fa-solid fa-calendar-days"></i>

                                @Html.TextBoxFor(n => n.Dob, new { type = "date", placeholder = "Enter your date of birth", required = "required" })
                            </div>
                            <div class="input-field" id="photo">
                                <label>Photo </label>
                                @Html.TextBoxFor(n => n.Photo, new { type = "file", placeholder = "upload your image", required = "required" })
                            </div>
                            <div class="input-field">
                                <i class="fa-solid fa-user"></i>

                                @Html.TextBoxFor(n => n.About, new { type = "text", placeholder = "Enter about yourself", required = "required" })
                            </div>

                            <div class="btn-field">
                                <button type="submit" id="loginBtn">Signup </button>

                            </div>
                        </div>

                    </div>

                </form>
            }
        </div>
    </div>


    <script type="text/javascript" src="@Url.Content("~/Scripts/customscripts/form.js")"></script>

</body>

</html>
