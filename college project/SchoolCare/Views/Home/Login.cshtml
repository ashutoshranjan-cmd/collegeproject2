
@using SchoolCare.Models
@model login
@{
    ViewBag.Title = "Login";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script src="https://kit.fontawesome.com/c4254e24a8.js" crossorigin="anonymous"></script>
    <link rel="shortcut icon" href="~/Content/assets/C_Image/sc-favicon.png" type="image/x-icon">
 
    <style>
        * {
            margin: 0;
            padding: 0;
            font-family: 'Poppins',sans-serif;
            box-sizing: border-box;
        }

        .container {
            width: 100%;
            height: 100vh;
            background-image: linear-gradient(rgba(0,0,50,0.8),rgba(0,0,50,0.8)),url('/Content/gallaryImage/background.png');
            background-position: center;
            background-size: cover;
            position: relative;
        }

        .form-box {
            width: 90%;
            max-width: 450px;
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%,-50%);
            background: #fff;
            padding: 50px 60px 70px;
            text-align: center;
            height: 30rem;
            margin-top: 3rem;
            border-radius: 5px;
        }

            .form-box h1 {
                font-size: 30px;
                margin-bottom: 60px;
                color: #3c00a0;
                position: relative;
            }

                .form-box h1::after {
                    content: "";
                    width: 30px;
                    height: 4px;
                    border-radius: 3px;
                    background: #3c00a0;
                    position: absolute;
                    bottom: -12px;
                    left: 50%;
                    transform: translateX(-50%);
                }

        .input-field {
            background: #eaeaea;
            margin: 15px 0;
            border-radius: 3px;
            display: flex;
            align-items: center;
            max-height: 65px;
            transition: max-height 0.5s;
            overflow: hidden;
        }

        input {
            width: 100%;
            background: transparent;
            border: 0;
            outline: 0;
            padding: 18px 15px;
        }

        .input-field i {
            margin-left: 15px;
            color: #9999;
        }

        form p {
            text-align: center;
            font-size: 13px;
            margin-top: 3rem;
        }

            form p a {
                text-decoration: none;
                color: #3c00a0;
            }

        .btn-field {
            width: 100%;
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-top: -7rem;
        }

            .btn-field button {
                flex-basis: 48%;
                background: #3c00a0;
                color: #fff;
                height: 40px;
                border-radius: 20px;
                border: 0;
                outline: 0;
                cursor: pointer;
                transition: background 1s;
            }
            #forget-pass{
                margin-left:-14rem;
                margin-top:-0.12rem;
            }

        .heading {
            display: flex;
            justify-content: center;
            align-items: center;
        }

            .heading img {
                margin-top: 3rem;
            }

        .input-group {
            height: 280px;
        }

        .btn-field button.disable {
            background: #eaeaea;
            color: #555;
        }

        .home {
            height: 3rem;
            width: 6rem;
            background-color: transparent;
            color: white;
            border: 2px solid white;
            position: fixed;
            left: 0;
            cursor: pointer;
            border-radius: 5px;
            top: 0;
        }

        .showpassword {
            margin-right: 1rem;
            cursor: pointer;
        }
    </style>
</head>
<body>
   

    <div class="container">
        <h3 class="heading">
        <button class="home" onclick="window.open('/','_self')"><i class="fa-solid fa-backward">&nbsp;Home</i></button>
        <img src="~/Content/assets/C_Image/school-care-p.png?width=120" alt="SchoolCare" /></h3>
        <div class="form-box">
            <h1 id="titl">Log in</h1>
            @using (Html.BeginForm("Login", "Home", FormMethod.Post))
            {
                <form>
                    <div class="input-group">

                        <div class="input-field" id="emailField">
                            <i class="fa-solid fa-envelope"></i>
                            @*<input type="email" placeholder="Email">*@
                            @Html.TextBoxFor(n => n.Email, new { type = "email", placeholder = "Enter your email", required = "required" })

                        </div>
                        <div class="input-field" id="passwordField">
                            <i class="fa-solid fa-lock"></i>
                            @*<input type="password" placeholder="Password">*@
                            @Html.TextBoxFor(n => n.Password, new { type = "password", id = "pass", placeholder = "Enter your password", required = "required" })
                            <i class="fa-solid fa-eye showpassword" onclick="showpassword()"></i>
                        </div>
                        <p id="forget-pass"> <a href="/Forget ">Forget Password</a></p>

                    </div>
                    <div class="btn-field">
                        <button type="submit" id="loginBtn">Login </button>
                        <button type="button" onclick="window.open('/Otp','_self')" id="loginBtn">Login with otp</button>
                    </div>
                    <p>New user <a href="/Signup">Sign up here!</a></p>
                </form>
            
            }
        </div>
    </div>
 
    <script type="text/javascript" src="@Url.Content("~/Scripts/customscripts/form.js")"></script>
  
</body>

</html>
